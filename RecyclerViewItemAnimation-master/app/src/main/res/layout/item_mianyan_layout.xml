<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/mine_selector"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="3dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_mianyan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="姓名"/>
                <TextView
                    android:id="@+id/id_mianyan_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:text="asas "/>
            </LinearLayout>


        <TextView
            android:id="@+id/id_mianyan_phone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="电话" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/id_bottomLine_view"
        android:layout_width="match_parent"
        android:layout_height="0.15dp"
        android:layout_marginTop="8dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_item_mianyan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/mine_selector"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="面验"
            />
        <View
            android:layout_weight="0.004"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             />
        <TextView
            android:id="@+id/id_item_imbt"
            android:layout_width="0dp"
            android:focusable="false"
            android:layout_height="match_parent"
            android:background="@drawable/mine_selector"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="查看"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="#e7e9ec" />
</LinearLayout>
